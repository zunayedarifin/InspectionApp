<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Container" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">?listPreferredItemHeight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="SwipeItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?listPreferredItemHeight</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
