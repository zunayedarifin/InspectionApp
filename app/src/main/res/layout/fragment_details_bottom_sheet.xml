<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:background="#F6F5F5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:weightSum="1">

            <ImageView
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                app:tint="#4D4B4B" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:text="@string/guestroom_101"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_info_24"
                app:tint="@color/medium_light_gray" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="32dp">

                <LinearLayout
                    android:id="@+id/main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".9"
                                    android:text="Holiday Inn Express Franklin"
                                    android:textStyle="bold"
                                    android:layout_marginStart="16dp"
                                    android:textColor="#8E8585"
                                    android:textSize="20sp"/>

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight=".1"
                                    android:src="@drawable/ellipsis_svgrepo_com"
                                    android:layout_marginStart="16dp"
                                    app:tint="@color/light_gray" />

                            </LinearLayout>



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginStart="16dp"
                                android:textStyle="bold"
                                android:textColor="#B7B5B5"
                                android:text="In Progress  19/04/23 at 11:17 AM by David M."/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cleanlinessLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#E5E3E3"
                            android:weightSum="1"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".9"
                                android:layout_marginStart="18dp"
                                android:textStyle="bold"
                                android:text="Cleanliness Inspection"
                                android:textColor="#8E8585"
                                android:textSize="20sp"/>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".1"
                                android:layout_gravity="end"
                                android:src="@drawable/baseline_keyboard_arrow_down_24"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bedroomsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:orientation="horizontal"
                            android:background="#E8E7E7"
                            android:weightSum="1"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".9"
                                android:layout_marginStart="18dp"
                                android:text="Bedrooms"
                                android:textColor="@color/gray"
                                android:textSize="20sp"/>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".1"
                                android:layout_gravity="end"
                                android:src="@drawable/baseline_keyboard_arrow_down_24"/>
                        </LinearLayout>

                        <include
                            android:id="@+id/firstBedroomLayout"
                            layout="@layout/list_item"
                            android:visibility="gone"/>
                        <include
                            android:id="@+id/firstBedroomLayoutAction"
                            layout="@layout/action_list"
                            android:visibility="gone"/>
                        <include
                            android:id="@+id/secondBedroomLayout"
                            layout="@layout/list_item"
                            android:visibility="gone"/>
                        <include
                            android:id="@+id/secondBedroomLayoutAction"
                            layout="@layout/action_list"
                            android:visibility="gone"/>

                        <include
                            android:id="@+id/thirdBedroomLayout"
                            layout="@layout/list_item"
                            android:visibility="gone"/>
                        <include
                            android:id="@+id/thirdBedroomLayoutAction"
                            layout="@layout/action_list"
                            android:visibility="gone"/>


                        <LinearLayout
                            android:id="@+id/amInspectionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#E5E3E3"
                            android:weightSum="1"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".9"
                                android:text="AM Inspection"
                                android:textStyle="bold"

                                android:layout_marginStart="18dp"
                                android:textColor="#8E8585"
                                android:textSize="20sp"/>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".1"
                                android:layout_gravity="end"
                                android:src="@drawable/baseline_keyboard_arrow_down_24"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/livingAreasLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:background="#E8E7E7"
                            android:weightSum="1"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".9"
                                android:layout_marginStart="18dp"

                                android:text="Living areas"
                                android:textColor="@color/gray"
                                android:textSize="20sp"/>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".1"
                                android:layout_gravity="end"
                                android:src="@drawable/baseline_keyboard_arrow_down_24"/>
                        </LinearLayout>

                        <include
                            android:id="@+id/firstLVLayout"
                            layout="@layout/list_item"
                            android:visibility="gone"/>
                        <include
                            android:id="@+id/firstLVLayoutAction"
                            layout="@layout/action_list"
                            android:visibility="gone"/>
                        <include
                            android:id="@+id/secondLVLayout"
                            layout="@layout/list_item"
                            android:visibility="gone"/>
                        <include
                            android:id="@+id/secondLVLayoutAction"
                            layout="@layout/action_list"
                            android:visibility="gone"/>

                        <include
                            android:id="@+id/thirdLVLayout"
                            layout="@layout/list_item"
                            android:visibility="gone"/>
                        <include
                            android:id="@+id/thirdLVLayoutAction"
                            layout="@layout/action_list"
                            android:visibility="gone"/>


                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <!-- FloatingActionButton -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/floating_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Complete"
                android:elevation="8dp"
                android:textColor="@color/white"
                app:srcCompat="@drawable/ic_add"
                android:backgroundTint="@android:color/holo_blue_light"
                tools:ignore="HardcodedText" /> <!-- Your icon drawable -->

        </RelativeLayout>



    </LinearLayout>

</layout>

